wp/
wp-admin/
wp-includes/

# =============================================================================
# WordPress Content — Selective Tracking
# =============================================================================

# ------------------------------
# PLUGINS
# ------------------------------
# Ignore all plugin contents
wp-content/plugins/*

# But keep the plugins folder itself in Git
!wp-content/plugins/.gitkeep

# ------------------------------
# THEMES
# ------------------------------
# Track ALL themes (parent + child)
!wp-content/themes/
wp-content/themes/*/.svn/
wp-content/themes/*/.git/
wp-content/themes/*/node_modules/

# ------------------------------
# UPLOADS & RUNTIME FILES
# ------------------------------
wp-content/uploads/*
wp-content/cache/
wp-content/upgrade/
wp-content/wflogs/
wp-content/backups/
wp-content/debug.log

# Plesk maintenance auto-generated files
wp-content/maintenance/*

!wp-content/maintenance/.gitkeep

# Allow a placeholder if needed
!wp-content/uploads/.gitkeep

# ------------------------------
# CACHING PLUGINS
# ------------------------------
wp-content/w3tc-config/
wp-content/wpo-cache/
wp-content/advanced-cache.php

# ------------------------------
# OTHER WP-CONTENT ITEMS
# ------------------------------
# Track mu-plugins only if they contain custom code
wp-content/mu-plugins/*
!wp-content/mu-plugins/*-custom.php
!wp-content/mu-plugins/custom-*/

# Fonts — keep if needed
# (You said plugin “rubbish” exists elsewhere, not fonts)
!wp-content/fonts/

# NOTE:
# You requested we DO NOT exclude:
# - catalog-designer.php
# - maintenance.php
# so they are tracked for inspection.

